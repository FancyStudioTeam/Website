---
import PageContent from '#components/pages/404/PageContent.astro';
import Layout from '#layouts/Layout.astro';

const { url } = Astro;
const { origin } = url;

const { canonical, description, title } = {
	canonical: `${origin}/404`,
	description: 'This page has not been found or is currently unavailable.',
	title: 'Not Found',
};
---

<Layout
	canonical={canonical}
	description={description}
	isFullScreen={true}
	robots="noindex, follow"
	title={title}
>
	<PageContent />
</Layout>
