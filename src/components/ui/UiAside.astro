---
import type { Icon as PhosphorIcon } from '@phosphor-icons/react';
import { twMerge } from 'tailwind-merge';

const { props } = Astro;
const { icon: Icon } = props;

const asideClassList = twMerge(
	'flex items-center gap-2 rounded-sm bg-light-secondary p-4 text-light-foreground text-sm shadow-md dark:bg-dark-tertiary dark:text-dark-foreground',
);
const iconClassName = twMerge('size-5 shrink-0');

/*
 * biome-ignore lint/correctness/noUnusedVariables: This interface is used
 * internally by Astro to infer component props.
 */
interface Props {
	icon: PhosphorIcon;
}
---

<aside class={asideClassList}>
	<Icon
		className={iconClassName}
		weight="fill"
	/>
	<slot />
</aside>
