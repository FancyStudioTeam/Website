---
import NavbarLink from './NavbarLink.astro';

const NAVBAR_LINK_ITEMS: NavbarLinkProps[] = [
	{
		href: '/',
		name: 'Home',
	},
	{
		href: '/projects',
		name: 'Projects',
	},
	{
		href: '/team',
		name: 'Team',
	},
];

interface NavbarLinkProps {
	href: string;
	name: string;
}
---

{NAVBAR_LINK_ITEMS.map(({ href, name }) => (
	/*
	 * biome-ignore lint/correctness/useJsxKeyInIterable: Astro does not use
	 * 'key' attribute.
	 */
	<NavbarLink
		href={href}
		name={name}
	/>
))}
