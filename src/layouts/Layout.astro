---
/* biome-ignore-all lint/correctness/noUnusedImports: (x) */

import '#styles/fonts.css';
import '#styles/tailwind.css';

import Navbar from '#components/Navbar.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<link
			rel="icon"
			href="/favicon.ico"
		>
		<meta
			name="viewport"
			content="width=device-width"
		>
		<meta
			name="generator"
			content={Astro.generator}
		>
		<title>FancyStudio</title>
	</head>
	<body
		class="bg-neutral-950 text-neutral-50 flex w-full justify-center font-general-sans"
	>
		<main class="max-w-7xl w-full">
			<Navbar />
			<slot />
		</main>
	</body>
</html>
